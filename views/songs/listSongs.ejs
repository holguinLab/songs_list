<%if (songs.length > 0){%> <!-- Como songs es una lista siempre devolvera la lista vacia , debemos comparar si la longitud es 0 -->


    <div class="table-responsive w-90 text-light  " data-bs-theme="dark">
        <div class="mt-3 mb-3">
            <a href="/exportSongs" class="btn btn-success">Excel</a>
            <a href="/exportPdf" class="btn btn-danger">PDF</a>
        </div>
        <table id="miTabla" class="table w-100 pt-3 mb-3 table-hover">
            <thead class="table-success ">
                <tr > 
                    <th class="text-center">codigo</th>
                    <th class="text-center">Titulo</th>
                    <th class="text-center">Artista</th>
                    <th class="text-center">Duracion</th>
                    <th class="text-center">Estrellas</th>
                    <th class="text-center">Likes</th>
                    <th class="text-center">Genero</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody >
                <% songs.forEach((song)=>{%>
                    <tr>
                        <td class="text-center"><%=song.codigo %> </td>
                        <td class="text-center"><%=song.titulo %> </td>
                        <td><%=song.artista %> </td>
                        <td class="text-center" ><%=song.duracion %> </td>
                        <td><%='⭐'.repeat(song.estrellas) %> </td>
                        <td><%=song.likes %> </td>
                        <td class="text-center"><%=song.genero %> </td>
                        <td class="d-flex flex-column gap-2">
                            <button class="btn btn-outline-info">Editar</button>
                            <button class="btn btn-outline-warning">Eliminar</button>
                        </td>
                    </tr>
                <%})%>
            </tbody>
        </table>
    </div>


<%} else { %>
    <h1> 😔 NO HAY CANCIONES AUN AGREGADAS</h1>
<%}%>
