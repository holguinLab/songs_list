<%if (vendedores.length > 0){%> <!-- Como songs es una lista siempre devolvera la lista vacia , debemos comparar si la longitud es 0 -->


    <div class="table-responsive w-90 text-light  " data-bs-theme="dark">
        <div class="mt-3 mb-3">
            <a href="/exportSongs" class="btn btn-success">Excel</a>
            <a href="/exportPdf" class="btn btn-danger">PDF</a>
        </div>
        <table id="miTabla" class="table w-100 pt-3 mb-3 table-hover">
            <thead class="table-success ">
                <tr > 
                    <th class="text-center">nombre</th>
                    <th class="text-center">documento</th>
                    <th class="text-center">Ventas Despachadas</th>
                    <th class="text-center">Object ID</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody >
                <% vendedores.forEach((vendedor)=>{%>
                    <tr>
                        <td class="text-center"><%=vendedor.nombre %> </td>
                        <td class="text-center"><%=vendedor.documento %> </td>
                        <td><%=vendedor.ventasDespachadas %> </td>
                        <td><%=vendedor._id %> </td>
                        <td class="d-flex flex-column gap-2">
                            <button class="btn btn-outline-info">Editar</button>
                            <button class="btn btn-outline-warning">Eliminar</button>
                        </td>
                    </tr>
                <%})%>
            </tbody>
        </table>
    </div>


<%} else { %>
